<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="60dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="end"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="80sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPhanTram"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#BCBCBC"
            android:textColor="#000000"
            android:text="%"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnXoaAll"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#BCBCBC"
            android:textColor="#000000"
            android:text="C"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/btnPhanTram"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FA2313"
            android:textSize="30sp"
            app:icon="@android:drawable/ic_input_delete"
            app:iconSize="40sp"
            app:iconTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/btnXoaAll"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btn7"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:backgroundTint="#3C3C3C"
            android:text="7"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPhanTram" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#3C3C3C"
            android:text="9"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/btn8"
            app:layout_constraintTop_toBottomOf="@id/btnXoa" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:backgroundTint="#3C3C3C"
            android:text="4"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn7" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#3C3C3C"
            android:text="5"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/btn4"
            app:layout_constraintTop_toBottomOf="@+id/btn8" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#3C3C3C"
            android:text="6"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintTop_toBottomOf="@+id/btn9" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:backgroundTint="#3C3C3C"
            android:text="1"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn4" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#3C3C3C"
            android:text="2"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/btn1"
            app:layout_constraintTop_toBottomOf="@+id/btn5" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#3C3C3C"
            android:text="3"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintTop_toBottomOf="@+id/btn6" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#3C3C3C"
            android:text="8"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/btn7"
            app:layout_constraintTop_toBottomOf="@id/btnXoaAll" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:backgroundTint="#3C3C3C"
            android:text="0"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn1" />

        <Button
            android:id="@+id/btnPhay"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#3C3C3C"
            android:text=","
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/btn0"
            app:layout_constraintTop_toBottomOf="@+id/btn3" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FA9D12"
            android:layout_marginStart="10dp"
            android:text="/"
            android:textSize="40dp"
            android:textStyle="bold"
            app:iconSize="40dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnXoa"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#FA9D12"
            android:text="x"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn9"
            app:layout_constraintTop_toBottomOf="@id/btnDiv" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#FA9D12"
            android:text="-"
            android:textSize="40sp"
            android:textStyle="bold"
            app:iconSize="40dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn6"
            app:layout_constraintTop_toBottomOf="@id/btnMul" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#FA9D12"
            android:text="+"
            android:textSize="40sp"
            android:textStyle="bold"
            app:iconSize="40dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn3"
            app:layout_constraintTop_toBottomOf="@id/btnSub" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#FA9D12"
            android:text="="
            android:textSize="40sp"
            android:textStyle="bold"
            app:iconSize="40dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/btnPhay"
            app:layout_constraintTop_toBottomOf="@id/btnAdd" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>